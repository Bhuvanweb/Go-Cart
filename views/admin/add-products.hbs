<section>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <form action="/admin/add-products" method="post" enctype="multipart/form-data">
          <h1>Add Products</h1>
          <label for="">Product Name</label>
          <input
            type="text"
            name="Name"
            class="form-control"
            id="name"
            placeholder="Enter Product Name"
          />

          <label for="">Category</label>
          <input
            type="text"
            name="Category"
            class="form-control"
            id="category"
            placeholder="Enter Category"
          />
          <label for="">Description</label>
          <input
            type="text"
            name="Description"
            class="form-control"
            id="description"
            placeholder="Enter Description"
          />

          <label for="">Price</label>
          <input
            type="text"
            name="Price"
            class="form-control"
            id="price"
            placeholder="Enter Price"
          />
          <label for="">Image</label>
          <input
            type="file"
            name="Image"
            class="form-control"
            id="image"
            placeholder="Upload Image"
          />
        <br>
          <button type="submit" class="btn btn-success ml-auto">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>