<section>
    <div class="container">
      <div class="row mt-4">
        <a href="/admin/add-products" class="btn btn-success ml-auto">Add Product</a>
      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      {{#each products}}
      <th>{{this.no}}</th>
      <td>{{this.name}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td><img style="width: 50px; ;height: 50px;" src="{{this.image}} " alt=""></td>
      {{/each}}
    </tr>
    
  </tbody>
</table>
    </div>
</section>